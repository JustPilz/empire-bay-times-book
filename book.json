{
    "gitbook": "3.x.x",
    "root": "./docs",
    "plugins": [
        "custom-favicon",
        "splitter",
        "alerts",
        "hints",
        "hide-element",
        "addcssjs",
        "todo",
        "anchorjs",
        "collapsible-chapters",
        "sidebar-footer",
        "toggle-chapters",
        "-lunr", "-search", "search-plus-mod"
    ],
    "pluginsConfig": {
        "hide-element": {
            "elements": [".gitbook-link"]
        },
        "addcssjs":
            {
            "js": ["assets/js/settings.js"]
        },
        "sidebar-ad": {
            "imageUrl": "http://i.imgur.com/K3HPXzm.png",
            "url": "http://google.com/",
            "description": "text",
            "btnText": "Buy me!"
        },
        "sidebar-footer": {
          "text": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse tincidunt tincidunt elit, vitae porttitor quam venenatis et. Vivamus sem erat, posuere sed egestas eget, placerat eget nisi."
        },
        "anchorjs": {
            "icon": "#",
            "placement": "left",
            "visible": "always",
            "class": "custom-class another-one"
        },
        "fontsettings": {
            "theme": "white",
            "family": "sans",
            "size": 2
        },
        "favicon": "assets/images/favicon.ico"
    },
    "links": {

        "home": true,

        "about": null,
        "issues": null,
        "contribute": null,

    "custom": {
        "Custom link name": "https://customlink.com"
    },

    "sharing": {
            "google": null,
            "facebook": null,
            "twitter": null
        }
    }
}
